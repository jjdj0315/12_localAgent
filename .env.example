# Database Configuration
POSTGRES_USER=llm_app
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=llm_webapp
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Backend Configuration
SECRET_KEY=generate-a-random-64-character-secret-key-here
SESSION_TIMEOUT_MINUTES=30

# LLM Service Configuration
MODEL_PATH=/models/llama-3-8b
MAX_MODEL_LEN=4096
GPU_MEMORY_UTILIZATION=0.9
TENSOR_PARALLEL_SIZE=1
MAX_NUM_SEQS=16
LLM_SERVICE_URL=http://llm-service:8001

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# File Upload Configuration
MAX_UPLOAD_SIZE_MB=50
UPLOAD_DIR=/uploads

# Security
BCRYPT_ROUNDS=12

# CORS (for development)
CORS_ORIGINS=http://localhost:3000,http://localhost:80

# Logging
LOG_LEVEL=INFO

# Metrics Configuration (Feature 002)
METRICS_HOURLY_RETENTION_DAYS=30
METRICS_DAILY_RETENTION_DAYS=90
METRICS_FAILURES_RETENTION_DAYS=30
METRICS_EXPORT_RETENTION_HOURS=1
