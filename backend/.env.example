# =============================================================================
# Local LLM Web Application - Environment Configuration (Example)
# =============================================================================
# Copy this file to .env and update with your actual values

# -----------------------------------------------------------------------------
# LLM Backend Configuration
# -----------------------------------------------------------------------------
LLM_BACKEND=llama_cpp
GGUF_MODEL_PATH=/path/to/your/models/qwen2.5-3b-instruct-q4_k_m.gguf
LLAMA_N_THREADS=8
LLAMA_N_CTX=2048
LLAMA_N_GPU_LAYERS=0
ENABLE_LORA=false

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/dbname

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
SECRET_KEY=change-this-to-random-secret-key-min-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
ENVIRONMENT=development
ALLOWED_ORIGINS=http://localhost:3000

# -----------------------------------------------------------------------------
# Storage Settings
# -----------------------------------------------------------------------------
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800

# -----------------------------------------------------------------------------
# Safety Filter Settings
# -----------------------------------------------------------------------------
ENABLE_ML_FILTER=true
FILTER_SENSITIVITY=balanced

# -----------------------------------------------------------------------------
# Multi-Agent Settings
# -----------------------------------------------------------------------------
ORCHESTRATOR_ROUTING_MODE=llm
AGENT_TIMEOUT=300
MAX_SEQUENTIAL_AGENTS=5
MAX_PARALLEL_AGENTS=3
